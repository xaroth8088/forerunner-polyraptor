{
  "name": "forerunner-polyraptor",
  "version": "1.0.0",
  "description": "A demonstration of a surprisingly complex Magic: the Gathering card interaction",
  "repository": "github:xaroth8088/forerunner-polyraptor",
  "author": "Geoffrey Benson <xaroth@gmail.com>",
  "license": "Apache 2.0",
  "private": true,
  "scripts": {
    "container:build": "../scripts/host_only.sh && ../scripts/build_container.sh",
    "container:start": "../scripts/host_only.sh && ../scripts/start_container.sh",
    "clean": "rimraf build",
    "start": "yarn clean && npm-run-all start:client",
    "start:client": "../scripts/container_only.sh && webpack-dev-server --config webpack/webpack-dev-client.conf.js",
    "lint:eslint": "yarn eslint --ext js client",
    "lint:fix:eslint": "yarn eslint --fix --ext js client",
    "lint:stylelint": "yarn stylelint \"client/**/*.{css,scss}\"",
    "lint:fix:stylelint": "yarn stylelint --fix \"client/**/*.{css,scss}\"",
    "lint": "npm-run-all --continue-on-error --parallel lint:eslint lint:stylelint",
    "lint:fix": "npm-run-all --continue-on-error --parallel lint:fix:eslint lint:fix:stylelint"
  },
  "dependencies": {
    "axios": "^0.18.0",
    "css-loader": "^1.0.0",
    "express": "^4.16.3",
    "i18next": "10.5.0",
    "immutable": "^3.8.2",
    "mime": "^2.3.1",
    "node-sass": "^4.9.0",
    "npm-run-all": "^4.1.3",
    "null-loader": "^0.1.1",
    "postcss-loader": "^3.0.0",
    "prop-types": "^15.6.2",
    "react": "^16.4.1",
    "react-dom": "^16.4.1",
    "react-hot-loader": "^4.3.3",
    "react-redux": "^5.0.7",
    "redux": "^4.0.0",
    "redux-devtools-extension": "^2.13.5",
    "redux-thunk": "^2.3.0",
    "sass-loader": "^7.0.3",
    "style-loader": "^0.23.1"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0",
    "@babel/plugin-proposal-class-properties": "^7.0.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0",
    "@babel/plugin-syntax-dynamic-import": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@babel/preset-react": "^7.0.0",
    "autoprefixer": "^9.3.1",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^8.0.0",
    "cross-env": "^5.2.0",
    "eslint": "^5.7.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-import-resolver-webpack": "^0.10.0",
    "eslint-plugin-import": "^2.12.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.9.1",
    "rimraf": "^2.6.2",
    "start-server-webpack-plugin": "^2.2.5",
    "stylelint": "^9.3.0",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-order": "^1.0.0",
    "stylelint-scss": "^3.1.3",
    "webpack": "^4.12.0",
    "webpack-cli": "^3.0.8",
    "webpack-dev-server": "^3.1.10"
  }
}
